---
const currentPath = Astro.url.pathname;

const personalServices = [
  { title: 'Buying or Selling a Property', href: '/services/buying-or-selling-a-property' },
  { title: 'Co-owning Property', href: '/services/co-owning-property' },
  { title: 'Remortgage & Equity Release', href: '/services/remortgage-equity-release' },
  { title: 'Probate & Estate Administration', href: '/services/probate-estate-administration' },
  { title: 'Probate Disputes', href: '/services/probate-disputes' },
  { title: 'Services for the Older Client', href: '/services/services-for-the-older-client' },
  { title: 'Trust Funds & Inheritance Tax', href: '/services/trust-funds-inheritance-tax' },
  { title: 'Wills, Powers of Attorney & Living Wills', href: '/services/planning-for-the-future' },
  { title: 'Clinical Negligence', href: '/services/clinical-negligence' },
  { title: 'Personal Injury Law', href: '/services/personal-injury-law' },
  { title: 'Family Law', href: '/services/family-law' },
];

const businessServices = [
  { title: 'Buying or Selling a Business', href: '/services/buying-or-selling-a-business' },
  { title: 'Commercial Property', href: '/services/commercial-property' },
  { title: 'Contract & Commercial Litigation', href: '/services/contract-commercial-litigation' },
  { title: 'Domestic & Commercial Property Disputes', href: '/services/domestic-property-disputes' },
];

const navItems = [
  { title: 'Home', href: '/' },
  {
    title: 'Services for You',
    href: '/services-for-you',
    children: personalServices,
  },
  {
    title: 'Services for Business',
    href: '/services-for-business',
    children: businessServices,
  },
  { title: 'Our Team', href: '/our-team' },
  { title: 'Our History', href: '/history' },
  { title: 'Our Costs', href: '/our-costs' },
  { title: 'Contact', href: '/contact' },
];

function isActive(href: string) {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="bg-navy text-white z-50">
  <!-- Top bar -->
  <div class="bg-navy-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center py-2 text-sm">
      <div class="flex items-center gap-4">
        <a href="mailto:enquiry@windeatts.co.uk" class="hover:text-gold transition-colors">
          enquiry@windeatts.co.uk
        </a>
        <div class="hidden sm:flex items-center gap-3 ml-2 pl-4 border-l border-white/20">
          <a href="https://www.facebook.com/Windeatts-855113251320306" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="text-gray-400 hover:text-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://www.instagram.com/windeattssolicitors" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-gray-400 hover:text-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
          </a>
          <a href="https://www.linkedin.com/company/windeatts-solicitors-llp" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-gray-400 hover:text-gold transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
      <div class="hidden sm:flex items-center gap-6">
        <a href="tel:01548852727" class="hover:text-gold transition-colors">
          <span class="sr-only">Kingsbridge phone: </span>01548 852727
        </a>
        <a href="tel:01803862233" class="hover:text-gold transition-colors">
          <span class="sr-only">Totnes phone: </span>01803 862233
        </a>
      </div>
    </div>
  </div>

  <!-- Main nav -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 shrink-0">
        <img
          src="/images/brand/windeatts-logo.png"
          alt="Windeatts Solicitors"
          class="h-14 lg:h-16 w-auto brightness-0 invert"
        />
      </a>

      <!-- Desktop nav -->
      <div class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class:list={[
                'px-3 py-2 text-sm font-medium rounded-md transition-colors',
                isActive(item.href) ? 'text-gold' : 'text-white hover:text-gold',
              ]}
            >
              {item.title}
              {item.children && (
                <svg class="inline-block ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.children && (
              <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-lg shadow-xl border border-gray-100 py-2 min-w-[280px]">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class:list={[
                        'block px-4 py-2.5 text-sm transition-colors',
                        currentPath === child.href
                          ? 'text-gold bg-cream'
                          : 'text-gray-700 hover:bg-cream hover:text-navy',
                      ]}
                    >
                      {child.title}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button
        type="button"
        class="lg:hidden p-2 rounded-md text-white hover:text-gold transition-colors"
        aria-label="Open menu"
        id="mobile-menu-btn"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-navy-dark border-t border-white/10">
    <div class="px-4 py-4 space-y-1 max-h-[80vh] overflow-y-auto">
      {navItems.map((item) => (
        <>
          <a
            href={item.href}
            class:list={[
              'block px-3 py-2.5 text-sm font-medium rounded-md transition-colors',
              isActive(item.href) ? 'text-gold bg-white/5' : 'text-white hover:text-gold hover:bg-white/5',
            ]}
          >
            {item.title}
          </a>
          {item.children && (
            <div class="pl-4 space-y-1">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class:list={[
                    'block px-3 py-2 text-sm rounded-md transition-colors',
                    currentPath === child.href
                      ? 'text-gold bg-white/5'
                      : 'text-gray-300 hover:text-gold hover:bg-white/5',
                  ]}
                >
                  {child.title}
                </a>
              ))}
            </div>
          )}
        </>
      ))}

      <div class="pt-4 border-t border-white/10 space-y-2">
        <a href="tel:01548852727" class="block px-3 py-2 text-sm text-gray-300 hover:text-gold">
          Kingsbridge: 01548 852727
        </a>
        <a href="tel:01803862233" class="block px-3 py-2 text-sm text-gray-300 hover:text-gold">
          Totnes: 01803 862233
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
