---
interface Props {
  title: string;
  subtitle?: string;
  size?: 'sm' | 'md' | 'lg';
  bgImage?: string;
}

const { title, subtitle, size = 'md', bgImage } = Astro.props;

const heights = {
  sm: 'py-12 lg:py-16',
  md: 'py-16 lg:py-24',
  lg: 'py-24 lg:py-36',
};
---

<section
  class:list={[
    'bg-navy text-white relative overflow-hidden',
    heights[size],
  ]}
>
  {bgImage && (
    <div
      class="absolute inset-0 bg-cover bg-center opacity-20"
      style={`background-image: url(${bgImage})`}
    />
  )}
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="font-(family-name:--font-heading) text-3xl md:text-4xl lg:text-5xl font-bold">
      {title}
    </h1>
    {subtitle && (
      <p class="mt-4 text-lg md:text-xl text-gray-300 max-w-2xl">
        {subtitle}
      </p>
    )}
    <slot />
  </div>
</section>
