---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  items: Crumb[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="bg-cream-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
    <ol class="flex items-center gap-2 text-sm text-gray-600">
      <li>
        <a href="/" class="hover:text-navy transition-colors">Home</a>
      </li>
      {items.map((item) => (
        <li class="flex items-center gap-2">
          <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          {item.href ? (
            <a href={item.href} class="hover:text-navy transition-colors">{item.label}</a>
          ) : (
            <span class="text-navy font-medium">{item.label}</span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>
