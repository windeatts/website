---
interface Props {
  name: string;
  role: string;
  title: string;
  photo?: string;
  href: string;
  phone: string;
  email: string;
}

const { name, role, title, photo, href, phone, email } = Astro.props;
---

<a
  href={href}
  class="group block bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-md hover:border-gold/30 transition-all duration-200"
>
  <div class="aspect-[3/4] bg-gray-100 overflow-hidden">
    {photo ? (
      <img
        src={photo}
        alt={name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-navy/5">
        <svg class="w-16 h-16 text-navy/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
    )}
  </div>
  <div class="p-4">
    <h3 class="font-(family-name:--font-heading) font-semibold text-navy group-hover:text-gold transition-colors">
      {name}
    </h3>
    <p class="text-sm text-gold mt-0.5">{title}</p>
    <p class="text-xs text-gray-500 mt-1">{role}</p>
    <div class="mt-3 pt-3 border-t border-gray-100 space-y-1">
      <p class="text-xs text-gray-600">{phone}</p>
      <p class="text-xs text-gray-600 truncate">{email}</p>
    </div>
  </div>
</a>
