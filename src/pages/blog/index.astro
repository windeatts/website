---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';

const allPosts = await getCollection('blog');
const posts = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<PageLayout
  title="Blog"
  description="Legal news, insights and guidance from Windeatts Solicitors. Stay informed with articles from our team in Kingsbridge and Totnes, Devon."
  subtitle="News, insights and practical guidance from our team."
  breadcrumbs={[{ label: 'Blog' }]}
>
  {posts.length > 0 ? (
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a
          href={`/blog/${post.id}`}
          class="group block bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-md hover:border-gold/30 transition-all duration-200"
        >
          <div class="p-6">
            <time
              datetime={post.data.date.toISOString()}
              class="text-xs text-gray-500 uppercase tracking-wide"
            >
              {post.data.date.toLocaleDateString('en-GB', {
                day: 'numeric',
                month: 'long',
                year: 'numeric',
              })}
            </time>
            <h2 class="mt-2 font-(family-name:--font-heading) text-lg font-semibold text-navy group-hover:text-gold transition-colors">
              {post.data.title}
            </h2>
            <p class="mt-2 text-sm text-gray-600 leading-relaxed">
              {post.data.summary}
            </p>
            {post.data.author && (
              <p class="mt-3 text-xs text-gray-500">By {post.data.author}</p>
            )}
            <span class="mt-4 inline-flex items-center text-sm font-medium text-gold group-hover:text-gold-dark transition-colors">
              Read more
              <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  ) : (
    <div class="text-center py-16">
      <div class="w-16 h-16 bg-navy/5 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-navy/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
      <h2 class="font-(family-name:--font-heading) text-2xl font-bold text-navy">
        No posts yet
      </h2>
      <p class="mt-3 text-gray-600 max-w-md mx-auto">
        We are working on our first articles. Check back soon for legal news, insights and practical guidance from our team.
      </p>
      <a
        href="/contact"
        class="mt-6 inline-block bg-gold hover:bg-gold-dark text-navy font-semibold px-6 py-3 rounded-lg transition-colors"
      >
        Get in touch
      </a>
    </div>
  )}
</PageLayout>
