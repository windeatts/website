---
import BaseLayout from './BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
  title: string;
  description: string;
  category: 'personal' | 'business';
  department: string;
  relatedServices?: { title: string; slug: string }[];
  teamMembers?: { name: string; slug: string; title: string; photo?: string }[];
}

const { title, description, category, department, relatedServices = [], teamMembers = [] } = Astro.props;

const categoryLabel = category === 'personal' ? 'Services for You' : 'Services for Business';
const categoryHref = category === 'personal' ? '/services-for-you' : '/services-for-business';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: title,
  description,
  provider: {
    '@type': 'LegalService',
    name: 'Windeatts Solicitors',
    url: 'https://www.windeatts.co.uk',
    telephone: '01548 852727',
  },
  areaServed: {
    '@type': 'Place',
    name: 'Devon, United Kingdom',
  },
};
---

<BaseLayout title={title} description={description} jsonLd={jsonLd}>
  <Hero title={title} size="sm" />
  <Breadcrumbs items={[{ label: categoryLabel, href: categoryHref }, { label: title }]} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="lg:grid lg:grid-cols-3 lg:gap-12">
      <!-- Main content -->
      <div class="lg:col-span-2">
        <div class="prose prose-lg max-w-none prose-headings:font-(family-name:--font-heading) prose-headings:text-navy prose-a:text-gold prose-a:no-underline hover:prose-a:underline">
          <slot />
        </div>
      </div>

      <!-- Sidebar -->
      <aside class="mt-12 lg:mt-0 space-y-8">
        <!-- CTA -->
        <div class="bg-navy rounded-xl p-6 text-white">
          <h3 class="font-(family-name:--font-heading) text-lg font-semibold mb-3">Get in touch</h3>
          <p class="text-gray-300 text-sm mb-4">
            Speak to our {department} team about {title.toLowerCase()}.
          </p>
          <div class="space-y-2">
            <a href="tel:01548852727" class="flex items-center gap-2 text-gold hover:text-gold-light transition-colors text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              01548 852727
            </a>
            <a href="/contact" class="inline-block bg-gold hover:bg-gold-dark text-navy font-semibold px-4 py-2 rounded-lg transition-colors text-sm mt-2">
              Send enquiry
            </a>
          </div>
        </div>

        <!-- Team members for this service -->
        {teamMembers.length > 0 && (
          <div class="bg-cream rounded-xl p-6">
            <h3 class="font-(family-name:--font-heading) text-lg font-semibold text-navy mb-4">Your team</h3>
            <ul class="space-y-3">
              {teamMembers.map((member) => (
                <li>
                  <a href={`/team/${member.slug}`} class="flex items-center gap-3 group">
                    <div class="w-10 h-10 rounded-full overflow-hidden bg-navy/10 shrink-0">
                      {member.photo ? (
                        <img src={member.photo} alt={member.name} class="w-full h-full object-cover" loading="lazy" />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center">
                          <svg class="w-5 h-5 text-navy/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                          </svg>
                        </div>
                      )}
                    </div>
                    <div>
                      <p class="text-sm font-medium text-navy group-hover:text-gold transition-colors">{member.name}</p>
                      <p class="text-xs text-gray-500">{member.title}</p>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Related services -->
        {relatedServices.length > 0 && (
          <div>
            <h3 class="font-(family-name:--font-heading) text-lg font-semibold text-navy mb-4">Related services</h3>
            <ul class="space-y-2">
              {relatedServices.map((service) => (
                <li>
                  <a
                    href={`/services/${service.slug}`}
                    class="flex items-center gap-2 text-sm text-gray-600 hover:text-gold transition-colors"
                  >
                    <svg class="w-3 h-3 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    {service.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </aside>
    </div>
  </div>
</BaseLayout>
